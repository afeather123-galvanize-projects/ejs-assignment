<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <style media="screen">
      div{
        border: 1px solid black;
        margin-left: 10px;
        display: inline-block;
        padding: 20px;
      }
      a{
        text-decoration-style: none;
        color: black;
      }
    </style>
  </head>
  <body>
    <% for(let i = 0; i<classes.length; i++){ %>
      <a href="/class/<%= classes[i].id %>">
        <div>
          <h3><%= classes[i].name %></h3>
          <h4><%= classes[i].inst %></h4>
        </div>
      </a>
    <% } %>
    <form action="/class" method="post">
      <input type="text" name="name" placeholder="Class Name">
      <input type="text" name="inst" placeholder="Instructor Name">
      <button type="submit" >Add class</button>
    </form>
  </body>
</html>
